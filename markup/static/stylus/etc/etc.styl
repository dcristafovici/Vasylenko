@media only screen and (max-width: 1200px)
  .content
    width 950px
  nav.menu li
    margin-right 30px
  .give-image
    img
      width 100%
  .important-wrapper
    padding-bottom 60px
  .service .about-block
    top -80%

@media only screen and (max-width: 992px)
  .content
    width calc(100% - 30px)
  .header
    &-right
      width calc(100% - 60px)
      justify-content space-between
    &-menu
      order 0
      &.active
        nav.menu
          transform: translateX(0)
          opacity 1
          z-index 3
          visibility: visible
        .burger
          transform:  translate(140px,-30px)
      .logo
        display flex
        justify-content center
        align-items center
      nav.menu
        position absolute
        left 0
        top 0
        width 200px
        height 100vh
        background #02123a
        z-index -1
        visibility: hidden
        transition all 0.6s ease-in-out
        opacity 0
        transform: translateX(-100%)
        
        ul
          flex-direction: column
        li
          margin-right 0
          display flex
          justify-content center
          align-items center
          width 100%
        a
          height 45px
          display flex
          align-items center
          width 100%
          justify-content center
          padding-left 15px
          box-sizing: border-box
          border-bottom 1px solid #0b1e4c
          &.logo
            height 70px
            padding-left 0
    .burger
      display block
      position relative
      transition all 0.6s ease-in-out
      z-index 10
    &-left
      display none
      order 1
      .logo
        display none


  .home
    &-left
      width 30%
    &-right
      width 56%
  .required-item
    &:first-child,
    &:nth-child(2),
    &:nth-child(3),
    &:nth-child(4)
      width 100%
      margin-bottom 30px
  .give
    &-image
      width 40%
      bottom 53px

  .packages-items
    flex-wrap wrap
  .packages-items
    justify-content space-between
  .packages-item
    width 48%
    margin-bottom 30px
    margin-right 0
  .important-wrapper
    padding 40px
  .reviews-video
    height 250px
  .owl-carousel .owl-item img
    width 100%
    height 100%
    object-fit: contain
  .callback-top
    flex-wrap: wrap
  .callback-left
    margin-bottom 40px
  .callback-bottom
    .form
      width 90%
      margin 0 auto
      &-row
        flex-wrap: wrap
        justify-content space-between
      &-group
        margin-bottom 10px
        width 48%
        &:nth-child(2)
          position relative
          left 20px
        &:nth-child(3)
          position relative
          left -20px
  .form-accept
    justify-content center
    br
      display none


@media only screen and (max-width: 768px)
  .home
    &-right
      width 66%
  
  .about
    &-image
      display none
    &-list
      width 100%
    .about-block,
    .about-block__two
      display none
    &-wrapper
      &:first-child
        margin-bottom 0
  
  .service
    .about-block
      display none
    &-image
      display none
    &-text
      display block
      width 100%

  .give
    &-image
      display none
    .title
      margin-bottom 30px
  .aspects-quote__paragraph::before
    content none
  .aspects-quote__paragraph p
    br
      display none
  .aspects-quote__image
    margin-right 20px
  .packages-item
    width 100%
  .packages .title
    margin-bottom 40px
    padding-top 30px
  .important-wrapper .yellow-list
    column-count: 1
  .reviews-video
    height 200px
  .callback-bottom .form
    width 85%