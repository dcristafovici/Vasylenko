.home
  background url('../img/assets/home/bg.jpg') no-repeat center/cover
  height 770px
  padding-top 220px
  box-sizing: border-box
  &-wrapper
    display flex
    justify-content space-between
    align-items flex-end
  &-left
    width 50%
  &-right
    width 46%
    h1
      span
        display block
        &:last-child
          position relative
          left 70px

ul.socials
  display flex
  align-items center
  li
    margin-right 30px
    transition all 0.3s ease-in-out
    &:hover
      transform: translate3d(0,-5px,0)
    &:last-child
      margin-right 0
    a
      width 26px
      display flex
      height 20px
      img
        width 100%
        
  

.home
  &-name
    margin-bottom 50px
  &-descr
    padding-left 70px
    margin-bottom 100px
    span
      font-size 22px
      line-height 30px
      font-family $Light
      color $wh


.home
  &-action
    position relative
    left 70px
    cursor pointer
    display flex
    align-items center
   
    &__left
      position relative
      padding-bottom 10px
      &:hover
        &::after
          transform: translateY(3px)
      &::after
        content ''
        position absolute
        transition all 0.5s ease
        transform: translateY(0)
        top 100%
        width 9px
        height 9px
        background url('../img/assets/home/down.svg') no-repeat center/contain
        left 50%
        margin-left -4.5px
    &__right
      margin-left 15px
      font-size 18px
      font-family $Light
      color $wh
      opacity .5  

  

.mouse
  position relative
  width 25px
  height 40px
  border-radius: 12.5px
  box-sizing: border-box
  overflow hidden
  border: 3px solid $yl
  span
    width 4px
    height 8px
    border-radius: 4px
    background $yl
    position absolute
    animation: mouseDown 1s ease-in-out infinite;
    left 50%
    transform: translateX(-50%)


@keyframes mouseDown
  from { top: 0%; opacity 1 }
  to { top: 100%; opacity: 1 }