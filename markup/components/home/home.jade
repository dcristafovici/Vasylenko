mixin home(data)
  section.home#home
    .content

      .home-wrapper


        .home-left

          ul.socials
            li
              a(href="https://vk.com/id38105679", target="_blank")
                img(src="static/img/assets/home/vk.svg", alt="")
            li
              a(href="https://www.facebook.com/oleksandr.vasylenko.56", target="_blank")
                img(src="static/img/assets/home/fb.svg", alt="")
            li
              a(href="https://www.instagram.com/aleksandr_vasilenko/", target="_blank")
                img(src="static/img/assets/home/instagram.svg", alt="")
            li
              a(href="https://www.youtube.com/channel/UCXXOJ4G0p0W4O03LSRJsDlA", target="_blank")
                img(src="static/img/assets/home/youtube.svg", alt="")
        
        //- Home Right
        .home-right
          
          //- Home Name
          .home-name
            h1 
              span Александр       
              span Василенко

          //- Home Descr
          .home-descr
            span Лидерство, Мотивация, Энергия, Эмоциональный Интеллект
          .home-descr.home-descr__two
            span Персональная работа над вашими успехами
          //- Home Action
          .home-action
            +button('#pop-call','Записаться на коучинг').btn-pop(data-action='Записаться на коучинг')