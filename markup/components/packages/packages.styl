.packages
  padding-bottom 0
  padding-top 50px
  .title
    text-align center
    margin-bottom 40px
  &-items
    display flex
    
  &-item
    width 30.83333333333333%
    margin-right 2.5%
    background #E6E6E6
    padding 25px
    box-sizing: border-box
    &__title
      font-size 29px
      font-family $Bold
      color #212121
      margin-bottom 30px
    &__info
      margin-bottom 70px
      p
        color #212121
        font-family $Reg
        font-size 16px
        line-height 24px
        margin-bottom 30px
        &:last-child
          margin-bottom 0
    &__price
      font-size 36px
      color #212121
      font-family $Bold
      margin-bottom 40px



.packages
  &-text
    color $bk
    font-size 24px
    line-height 40px
    margin-top 40px
    padding-bottom 30px
    text-align center
    font-family $Reg