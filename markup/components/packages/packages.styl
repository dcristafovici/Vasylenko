.packages
  padding-top 150px
  padding-bottom 0
  background url('../img/assets/packages/bg.svg') no-repeat center/cover
  .title
    text-align center
    margin-bottom 70px
    h2
      color $wh
  &-items
    display flex
    
  &-item
    width 30.83333333333333%
    margin-right 2.5%
    background #E6E6E6
    padding 25px
    box-sizing: border-box
    &__title
      font-size 29px
      font-family $Bold
      color #212121
      margin-bottom 30px
    &__info
      margin-bottom 70px
      p
        color #212121
        font-family $Reg
        font-size 16px
        line-height 24px
        margin-bottom 30px
        &:last-child
          margin-bottom 0
    &__price
      font-size 36px
      color #212121
      font-family $Bold
      margin-bottom 40px