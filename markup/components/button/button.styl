.button
  display inline-flex
  align-items center
  padding-left 10px
  padding-right 10px
  background $yl
  height 50px
  position relative
  transition: all 0.3s ease-in-out
  &.simple
    &::before,
    &::after
      content none
    &.full
      width 100%
      padding 0
      text-align center
      justify-content center
      
  &::before
    content ''
    position: absolute;
    bottom: 0;
    border-bottom: 50px solid #ffc600;
    border-left: 20px solid transparent;
    right: 100%;
    transition: all 0.3s ease-in-out
  &::after
    content ''
    left 100%
    position: absolute;
    bottom: 0;
    border-top: 50px solid #ffc600;
    transition: all 0.3s ease-in-out
    border-right: 20px solid transparent;
  span
    color $bk
    font-size 16px
    font-family $Bold
  &:hover
    background $wh
    &::before
      border-bottom: 50px solid $wh;
    &::after
      border-top: 50px solid $wh;