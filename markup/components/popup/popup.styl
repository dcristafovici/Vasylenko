#v-bg
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index 40
  background rgba(0,0,0,0.5)


.popup
  width 500px
  padding 40px 20px
  box-sizing: border-box
  position relative
  margin 0 auto
  background $wh
  
  &-title
    text-align center
    padding-top 20px
    padding-bottom 40px
    color $bk
    font-size 30px
    font-family $bBold
  .form
    width 90%
    margin 0 auto
    .form-group
      width 100%
      margin-bottom 20px

#popup-action
  opacity -1
  z-index -1
  visibility: hidden
  position absolute
.popup#pop-thx
  .popup-check
    width 200px
    margin 0 auto
    position relative
    top -30px
    margin-bottom -30px
  .popup-text
    font-size 20px
    font-family $bBold
    text-align center
    line-height 24px